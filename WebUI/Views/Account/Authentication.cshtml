@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("Logoff", "Account"))
    {
        <div class="pull-right">
            <input type="submit" class="btn btn-success" value="Log out" />
        </div>
    }
    if (User.IsInRole("admin") || User.IsInRole("moderator"))
    {

        using (Html.BeginForm("Create", "Admin"))
        {
            <div class="pull-left">
                <input type="submit" class="btn btn-success" value="Create new Product" />
            </div>
        }
        if (User.IsInRole("admin"))
        {
            <div class="pull-left">
                @Html.ActionLink("List Users", "ListUsers", "Admin", null, new { @class = "btn btn-success" })
            </div>
        }
    }
}
else
{
    <div class="pull-right">
        @Html.ActionLink("Log In", "Login", "Account", null, new { @class = "btn btn-success" })
    </div>
}

@model IEnumerable<Domain.Entities.User>

@{
    ViewBag.Title = "List Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Users</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Name</th>
                <th class="text-center">Age</th>
                <th class="text-center">Role</th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td class="text-center">@item.UserId</td>
                <td class="text-center">@item.Email</td>
                <td class="text-center">@item.Age</td>
                <td class="text-left">
                    @switch (item.RoleId)
                    {
                        case 1:
                            {
                                @:Admin
                                break;
                            }
                        case 2:
                            {
                                @:moderator
                                break;
                            }
                        case 3:
                            {
                                @: user
                                break;
                            }
                    }
                    @if (item.RoleId != 1)
                    {
                        if (item.RoleId == 2)
                        {
                            using (Html.BeginForm("ChangeRole", "Admin", new { userId = item.UserId, newRoleId = 3 }))
                            {
                                <input type="submit" class="btn btn-success pull-right" value="Set to User" />
                            }
                        }
                        else
                        {
                            using (Html.BeginForm("ChangeRole", "Admin", new { userId = item.UserId, newRoleId = 2 }))
                            {
                                    <input type="submit" class="btn btn-success pull-right" value="Set to Moderator" />
                            }
                        }
                    }
                </td>
            </tr>
                    }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Exit", "List","Product", null,
        new { @class = "btn btn-default" })
    </div>
</div>
